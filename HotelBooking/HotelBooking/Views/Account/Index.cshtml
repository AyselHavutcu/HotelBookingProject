
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model  HotelBooking.Dto.AccountDetailDto

<style>
    .HotelDetailButton:hover {
        background: transparent;
        border: solid #ed5565 2px;
        color: #ed5565;
    }

    .HotelDetailButton {
        background: #ed5565;
        width: 100%;
        height: 45px;
        color: #fff;
        letter-spacing: 1px;
        font-size: 16px;
        border: solid #ed5565 2px;
        border-radius: 3px;
    }
</style>

<div class="page-banner">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-area">
                    <h2>Rooms Listing</h2>
                    <p>Whether you're looking to sell or let your home or want to buy or rent a home, we really are the people for you to come to.</p>
                    <a href="index.html" class="btn btn-fill">Home</a>
                    <a href="rooms-list-2.html" class="btn btn-fill btn-default">Rooms Listing</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="rooms-list content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
                <div class="sidebar">
                    <div class="Recent-news sidebar-widget">
                        <h2 class="title">Options</h2>

                        <div class="media">
                            <div class="media-left">
                                <a href="#">
                                    <img src="/Content/icon/keyicon.png" style="width:16px; height:16px;" />
                                </a>
                            </div>
                            <div class="media-body">
                                <a href="/Account/ChangePassword">Create a new password</a>
                            </div>
                        </div>

                        <div class="media">
                            <div class="media-left">
                                <a href="#">
                                    <img src="/Content/icon/envelope.png" style="width:16px; height:16px;" />
                                </a>
                            </div>
                            <div class="media-body">
                                <a href="rooms-details.html">Connect message</a>
                            </div>
                        </div>
                        <div class="media">
                            <div class="media-left">
                                <a href="#">
                                    <img src="/Content/icon/settings-cog2.png" style="width:16px; height:16px;" />
                                </a>
                            </div>
                            <div class="media-body">
                                <a href="/Account/Index">Account</a>
                            </div>
                        </div>
                        <div class="media">
                            <div class="media-left">
                                <a href="#">
                                    <img src="/Content/icon/icons8-shutdown-16.png" style="width:16px; height:16px;" />
                                </a>
                            </div>
                            <div class="media-body">
                                <a href="/Home/Logout">Logout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
                <form action="/Account/AccountEdit" method="post">
                    <div class="shop-billing-fields">
                        <h3>Hesabım</h3>
                        <div class="row">
                            <div class="col-md-6" style="float:left;">
                                <div class="form-group">
                                    <label>Ad Soyad</label>
                                    <input type="text" class="input-text" name="NameSurname" id="NameSurname" placeholder="Name Surname" value="@Model.customerItem.NameSurname">
                                </div>
                            </div>

                            <div class="col-md-6" style="float:left;">
                                <div class="form-group">
                                    <label>Birth date</label>
                                    <input type="text" class="input-text" name="BirthDate" id="BirthDate" placeholder="Doğum Tarihi" value="@(Model.customerItem.BirthDate?.ToString("dd/MM/yyyy"))">
                                </div>
                            </div>


                            <div class="col-md-6" style="float:left;">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" class="input-text" name="Email" id="Email" placeholder="Email" value="@Model.customerItem.Email">
                                </div>
                            </div>


                            <div class="col-md-6" style="float:left;">
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input type="text" class="input-text" name="Phone" id="Phone" placeholder="Phone" value="@Model.customerItem.Phone">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Adres</label>
                                    <textarea type="text" class="input-text " name="Address" id="Address" placeholder="Adres" value="@Model.customerItem.Address"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Country</label>
                                    <select class="input-text" id="CountryId" name="CountryId">
                                        <option selected>Seçiniz</option>
                                        @foreach (var countryItem in Model.countryV10s)
                                        {
                                            <option value="@countryItem.CountryId">@countryItem.CountryName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>City</label>
                                    <select class="input-text" id="CityId" name="CityId"></select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="submit" name="submit" class="HotelDetailButton" value="Save changes">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="http://code.jquery.com/jquery-1.9.1.js"></script>


<script src="/Content/js/bootstrap-datepicker.min.js"></script>
<link href="/Content/css/bootstrap-datepicker3.css" rel="stylesheet" />
<script src="/Content/js/bootstrap-datepicker.tr.js"></script>

<script>
    var date_inputCheckin = $('input[name="BirthDate"]');
    var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
    date_inputCheckin.datepicker({
        format: 'dd/mm/yyyy',
        container: container,
        todayHighlight: true,
        autoclose: true,
        language: 'tr'
    });
</script>

<script>
    $("#CountryId").change(function () {

        var countyId = $('#CountryId').val();

        $.ajax({
            type: "POST",
            url: "/Account/FillCity",
            data: '{"countryId": "' + countyId + '"}',
            contentType: "application/json; charset=utf-8",
            dataType: "JSON",
            success: function (data) {

                $('#CityId').empty();

                for (var i = 0; i < data.length; i++) {
                    $("#CityId").append('<option value="' + data[i].TownId + '">' + data[i].TownName + '</option>');
                }
            }
        });
    });
</script>